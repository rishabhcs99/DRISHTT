<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishabhshetty.drishtt.Calling_RS">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5b954"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Enter BCD Values:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ToggleButton
            android:id="@+id/toggleButton8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59dp"
            android:background="?android:attr/colorPressedHighlight"
            android:checked="false"
            android:contentDescription="Eight"
            android:text="ToggleButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textOff="0"
            android:textOn="1" />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="167dp"
            android:background="?android:attr/colorPressedHighlight"
            android:contentDescription="Four"
            android:text="ToggleButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textOff="0"
            android:textOn="1" />

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="51dp"
            android:background="?android:attr/colorPressedHighlight"
            android:contentDescription="One"
            android:text="ToggleButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textOff="0"
            android:textOn="1" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="?android:attr/colorPressedHighlight"
            android:text="Reset" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/toggleButton4"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/colorPressedHighlight"
            android:text="Enter" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="159dp"
            android:background="?android:attr/colorPressedHighlight"
            android:contentDescription="Two"
            android:text="ToggleButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textOff="0"
            android:textOn="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="83dp"
            android:text="8"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/toggleButton4"
            android:layout_alignStart="@+id/textView"
            android:text="4"
            android:textSize="15dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/toggleButton1"
            android:layout_alignStart="@+id/textView"
            android:text="1"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toggleButton8"
            android:layout_centerHorizontal="true"
            android:text="+"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="+"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toggleButton2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-159dp"
            android:text="+"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/toggleButton2"
            android:layout_alignStart="@+id/textView"
            android:text="2"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/myLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>